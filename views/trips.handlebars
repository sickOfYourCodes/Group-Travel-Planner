          <li class="w3-black w3-xlarge w3-padding-32"><a class="w3-hover" href="/Dashboard/trips/trip">{{trip.trip_name}}</a></li>
          <li class="w3-padding-16">{{trip.description}}</li>
          <li class="w3-padding-16">{{trip.location}}</li>
        </ul>
